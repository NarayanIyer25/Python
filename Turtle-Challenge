#Straight Line
from turtle import Turtle, Screen

timmy = Turtle()
for i in range(4):
    timmy.forward(100)
    timmy.right(90)
screen = Screen()
screen.exitonclick()

#Dashed Line

from turtle import Turtle, Screen

timmy = Turtle()
for i in range(10):
    timmy.forward(10)
    timmy.penup()
    timmy.forward(10)
    timmy.pendown()
screen = Screen()
screen.exitonclick()

# shapes

from turtle import Turtle, Screen

timmy = Turtle()

# Triangle
size = 360 / 3
timmy.color('CornFlowerBlue')
for i in range(3):
    timmy.forward(90)
    timmy.right(size)

# Square
size = 360 / 4
timmy.color('red')
for i in range(4):
    timmy.forward(90)
    timmy.right(size)

# Pentagon
size = 360 / 5
timmy.color('blue')
for i in range(5):
    timmy.forward(90)
    timmy.right(size)
# Hexagon
size = 360 / 6
timmy.color('green')
for i in range(6):
    timmy.forward(90)
    timmy.right(size)

# Heptagon
size = 360 / 7
timmy.color('indigo')
for i in range(7):
    timmy.forward(90)
    timmy.right(size)

# Octagon
size = 360 / 8
timmy.color('violet')
for i in range(8):
    timmy.forward(90)
    timmy.right(size)

# Nonagon
size = 360 / 9
timmy.color('grey')
for i in range(9):
    timmy.forward(90)
    timmy.right(size)

# Decagon
size = 360 / 10
timmy.color('orange')
for i in range(10):
    timmy.forward(90)
    timmy.right(size)
screen = Screen()
screen.exitonclick()
